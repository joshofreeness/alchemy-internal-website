<% the_product = @product %>
<% product_id = @product.get_product_id %>
<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>Editing: <%= @product.product_id %></h1>
    </div>
    <% if @product.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
            </h2>
            <ul>
                <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
    <strong>Description:</strong>
    <%= the_product.description %>
    </p>
    <p>
    <strong>SDS:</strong>
    <% unless the_product.sds.nil? %>
        <%= link_to "#{@product.sds}", :controller => "products", :action => "download_document", :id => @product.get_product_id, :document_type => "sds" %>
    <% else %>
        No SDS file
    <% end %>
    </p>
    <%= form_for :product, method: :patch, url: product_path(product_id), :html => {:class => 'form-inline'} do |p| %>
        <%= p.file_field :sds_file, {class: 'form-control'} %>
        <%= p.submit "Replace SDS", {class: 'btn btn-primary'} %>
    <% end %>
    <p>
    <strong>PDS:</strong>
    <% unless the_product.pds.nil? %>
        <%= link_to "#{@product.pds}", :controller => "products", :action => "download_document", :id => @product.get_product_id, :document_type => "pds" %>
    <% else %>
        No PDS file
    <% end %>
    </p>
    <%= form_for :product, method: :patch, url: product_path(product_id), :html => {:class => 'form-inline'} do |p| %>
        <%= p.file_field :pds_file, {class: 'form-control'} %>
        <%= p.submit "Replace PDS", {class: 'btn btn-primary'} %>
    <% end %>
    <div class="list-group">
        <%= link_to 'Finished editing', product_path(product_id), {class: 'list-group-item'} %>
        <%= link_to 'Products', products_path, {class: 'list-group-item'} %>
    </div>
</div>

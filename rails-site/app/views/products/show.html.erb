<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>ID: <%= @product.product_id %></h1>
    </div>
    <p>
    <strong>Description:</strong>
    <%= @product.description %>
    </p>
    <p>
    <strong>SDS:</strong>
    <% unless @product.sds.nil? %>
        <%= link_to "#{@product.sds}", :controller => "products", :action => "download_document", :id => @product.get_product_id, :document_type => "sds" %>
    <% else %>
        No SDS file
    <% end %>
    </p>
    <p>
    <% if @product.sds_expiry.past? %>
        <strong style='color: red'>SDS HAS EXPIRED:</strong>
    <% else %>
        <strong>SDS expiry:</strong>
    <% end %>
    <%= @product.get_sds_expiry_formatted %>
    </p>
    <p>
    <strong>PDS:</strong>
    <% unless @product.pds.nil? %>
        <%= link_to "#{@product.pds}", :controller => "products", :action => "download_document", :id => @product.get_product_id, :document_type => "pds" %>
    <% else %>
        No PDS file
    <% end %>
    </p>
    <div class="list-group">
        <%= link_to 'Edit', edit_product_path(@product.get_product_id), {class: 'list-group-item'} %>
        <%= link_to 'Products', products_path, {class: 'list-group-item'}  %>
    </div>
</div>

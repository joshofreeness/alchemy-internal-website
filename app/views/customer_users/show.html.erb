<div class="container">
  <p id="notice"><%= notice %></p>
  <p align="right"> Send credentials to customer <%= link_to image_tag('mail.svg', :width => 25, :border => 0), new_email_path(:to => @customer_user.email, :subject => 'Credentials for Alchemy Agencies Website', :body => @body) %></p>

  <p>
  <strong>Name:</strong>
  <%= @customer_user.name %>
  </p>

  <p>
  <strong>Company:</strong>
  <%= @customer_user.company_name %>
  </p>

  <p>
  <strong>Email:</strong>
  <%= @customer_user.email %>
  </p>

  <p>
  <strong>Password:</strong>
  <%= @customer_user.password %>
  </p>

  <p>
  <strong>Terms of Use:</strong>  
  <% if @customer_user.terms_of_use %>
      Accepted
  <% else %>
      Not accepted
  <% end %>
  </p>
  <br>
  <div class="container">
    <%= render :partial => "product_list", :locals => {:products => @customer_user.products, :show_expired_only => params[:expired_sds] == 'true'} %>
  </div>


  <div class="container">
  <%= link_to 'Edit', edit_customer_user_path(@customer_user) %> |
  <%= link_to 'Back', customer_users_path %>
</div>
</div>

<div class="container">
    <div class="page-header">
      <h1>Listing Customer Users</h1>
    </div>

<div class="table-responsive">
  <table class="order-table table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_users.each do |customer_user| %>
      <tr>
        <td><%= customer_user.name %></td>
        <td><%= customer_user.company_name%></td>
        <td><%= customer_user.email %></td>
        <td><%= link_to 'Show', customer_user %></td>
        <td><%= link_to 'Edit', edit_customer_user_path(customer_user) %></td>
        <td><%= link_to 'Destroy', customer_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Customer user', new_customer_user_path, {:class => 'btn btn-primary'} %>
<br>
<br>
</div>

<div class="container theme-showcase" role="main">
  <div class="page-header">
    <%= image_tag("logo.svg", :alt => "Company Logo", width: 300) %>
  </div>
  <%= form_for :user, method: :patch, html: { :class => 'form-inline' } do |p| %>
    <%= p.password_field :password, {class: 'form-control'} %>
    <%= p.submit "Change Password", {class: 'btn btn-danger'} %>
  <% end %>
</div>

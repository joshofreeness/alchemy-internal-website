<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>Add Alchemy header to PDF</h1>
    </div>

    <%= form_for :pdf, url: pdfs_path, :html => {:class => 'form-inline'} do |p| %>
        <%= p.file_field :pdf_files, :multiple => true, :class => 'form-control' %>
        <%= p.submit "Submit", {class: 'btn btn-primary'} %>
        <br>
        Landscape? <%= p.check_box :landscape %>
    <% end %>
    <br>
    <div class="container">
        <%= link_to "Back Home", root_path, {class: 'btn btn-primary'} %>
    </div>
    <br>
</div>
